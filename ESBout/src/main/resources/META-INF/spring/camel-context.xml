<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xmlns:camel="http://camel.apache.org/schema/spring"
	xsi:schemaLocation="
http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd
http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
http://camel.apache.org/schema/spring http://camel.apache.org/schema/spring/camel-spring.xsd">


	<import resource="mq-conf.xml" />
	<context:component-scan base-package="co.com.core.evaluator" />
	<context:component-scan base-package="co.com.core.transformer" />
	
	<camel:camelContext
		xmlns="http://camel.apache.org/schema/spring" >

		<camel:dataFormats>
			<camel:jaxb id="jaxb" contextPath="co.com.canonical.flights" />

		</camel:dataFormats>
		
		<camel:route id="flight-leg-integration">
			<camel:from uri="activemq:queue:FLIGHTS.BRIDGE.QUEUE" />
			<camel:log message="Iniciando flight-leg-integration" />
			<camel:choice>
				<camel:when id="blizard-integration">
					<camel:simple>${bean:DomainEventsInfoEvaluator?method=checkBlizard}</camel:simple>
					<camel:log message="Blizard" />
					<camel:to uri="bean:flightsTransformer?method=transformBlizard" />
					<camel:to uri="file:C:/filesaes/il/blizard?fileName=blizard.xml" />
                </camel:when>
			</camel:choice>
		</camel:route>

	</camel:camelContext>

</beans>